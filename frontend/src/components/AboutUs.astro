---
import Image from "astro/components/Image.astro";
import Decoration from "./Decoration.astro";
const cifras = [
  {
    title: "10k+",
    description: "Lorem ipsum ",
  },
  {
    title: "500+",
    description: "Lorem ipsum ",
  },
  {
    title: "50+",
    description: "Lorem ipsum ",
  },
];
---

<section class="max-w-7xl mx-auto py-20" aria-labelledby="sobre-nosotros-encabezado">
  <div
    class="flex flex-col justify-center items-center gap-20 md:gap-8 md:flex-row px-3 sm:px-6 lg:px-8"
  >
    <article class="flex-1">
      <h2
        id="sobre-nosotros-encabezado"
        class="text-lg font-bold mb-2 text-white"
      >
        Sobre Nosotros
      </h2>
      <h3 class="text-3xl font-semibold mb-11">Nuestra Historia</h3>
      <p>
        Lorem ipsum odor amet, Lorem consectetuer adipiscing elit. lore
        Consequat praesent nec primis fermentum.Lorem ipsum odor amet, Lorem
        consectetuer adipiscing elit. lore Consequat praesent nec primis
        fermentum.Lorem ipsum odor amet, Lorem consectetuer adipiscing elit.
        lore Consequat praesent nec primis fermentum.
      </p>
      <aside class="flex">
        {
          cifras.map((cifra) => (
            <article class="p-0 flex-1 mt-20 justify-between text-center">
              <h4 class="font-bold mb-1 text-4xl">{cifra.title}</h4>
              <p class="text-sm">{cifra.description}</p>
            </article>
          ))
        }
      </aside>
    </article>
    <article class="flex-1 justify-center items-center flex">
      <div class="w-fit lg:max-w-[70%] relative flex justify-center items-center">
        <Image
          src={"/assets/compra.jpg"}
          alt="Compra de propiedades"
          width={800}
          height={900}
          format="avif"
          loading="lazy"
          class="max-w-80 lg:max-w-full h-auto object-cover rounded-2xl shadow-2xl z-10 bg-gray-400 "
        />
        <Decoration
          circles={[
            { size: "270px", top: "-55px", left: "-40px" },
            { size: "100px", top: "-10px", right: "-30px" },
            { size: "50px", bottom: "20px", left: "-45px" },
            { size: "20px", bottom: "80px", left: "-70px" },
          ]}
        />
      </div>
    </article>
  </div>
</section>
