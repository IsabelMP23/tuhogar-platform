---
const { HomeStyle } = Astro.props;
---

<header class="z-1">
  <nav
    class={`relative after:pointer-events-none after:absolute after:inset-x-0 after:bottom-0 after:h-px ${HomeStyle ? "" : "bg-(--secondary-color)"}`}
  >
    <div class="mx-auto max-w-7xl md:max-w-11/12 px-3 sm:px-6 lg:px-8">
      <div class="relative z-20 flex h-16 items-center justify-between">
        <div class="flex flex-1 items-center justify-start">
          <a href="/" class="flex shrink-0 items-center" aria-label="Inicio">
            <p
              id="Logo"
              class={`text-xl font-bold cursor-pointer ${HomeStyle ? "text-(--secondary-color) text-shadow" : "text-white"}`}
            >
              TuHogar
            </p>
          </a>
          <div
            class={`hidden sm:ml-auto sm:block bg-white rounded-4xl px-3 py-1 ${HomeStyle ? "shadow-xl/30" : ""}`}
          >
            <div class="flex space-x-4">
              <a
                href="/"
                aria-current="page"
                class="rounded-2xl px-3 py-2 text-sm font-medium text-black hover:text-(--title)"
                >Inicio</a
              >
              <a
                href="/propiedades"
                class="rounded-2xl px-3 py-2 text-sm font-medium text-black hover:bg-white/5 hover:text-(--title)"
                >Propiedades</a
              >
              <a
                href="/servicios"
                class="rounded-2xl px-3 py-2 text-sm font-medium text-black hover:bg-white/5 hover:text-(--title)"
                >Servicios</a
              >
              <a
                href="/conocenos"
                class="rounded-2xl px-3 py-2 text-sm font-medium text-black hover:bg-white/5 hover:text-(--title)"
                >Con칩cenos</a
              >
            </div>
          </div>
          <div class="hidden sm:block items-center sm:ml-auto">
            <a 
              id="btnContactanos"
              href="/contactanos"
              class={`inline-flex btn items-center justify-center rounded-md p-2 ${HomeStyle ? "shadow-lg/30" : ""}`}
            >
              Cont치ctanos
            </a>
          </div>
        </div>
      </div>
      <div class="absolute inset-y-0 right-4 flex items-center sm:hidden">
        <button
          type="button"
          id="mobile-menu-btn"
          class="btn relative z-20 inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-white/5 hover:text-white focus:outline-2 focus:-outline-offset-1 focus:outline-indigo-500"
        >
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only">Open main menu</span>
          <svg
            id="IconOpen"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            data-slot="icon"
            aria-hidden="true"
            class="size-6 in-aria-expanded:hidden"
          >
            <path
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
          <svg
            id="IconClose"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            data-slot="icon"
            aria-hidden="true"
            class="size-6 hidden"
          >
            <path
              d="M6 18 18 6M6 6l12 12"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>
      </div>
    </div>

    <el-disclosure
      id="mobile-menu"
      hidden
      class="peer block sm:hidden absolute w-full right-0 top-0 overflow-hidden transition-all duration-300 pt-20 bg-(--secondary-color) shadow-lg rounded-bl-lg"
    >
      <div class="space-y-1 px-2 pt-2 pb-3 z-10">
        <a
          href="/"
          aria-current="page"
          class="block rounded-md bg-gray-950/50 px-3 py-2 text-base font-medium text-white"
          >Inicio</a
        >
        <a
          href="/propiedades"
          class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-white/5 hover:text-white"
          >Propiedades</a
        >
        <a
          id="btnServiciosMobile"
          href="/servicios"
          class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-white/5 hover:text-white"
          >Servicios</a
        >
        <a
          href="/conocenos"
          class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-white/5 hover:text-white"
          >Con칩cenos</a
        >
        <a
          href="/contactanos"
          class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-white/5 hover:text-white"
          >Cont치ctanos</a
        >
      </div>
    </el-disclosure>
  </nav>
</header>

<script>
  const btn = document.getElementById("mobile-menu-btn") as HTMLButtonElement;
  const menu = document.getElementById("mobile-menu") as HTMLElement;
  const iconOpen = btn.querySelector("svg#IconOpen") as SVGElement;
  const iconClose = btn.querySelector("svg#IconClose") as SVGElement;

  btn.addEventListener("click", () => {
    menu.toggleAttribute("hidden");
    iconOpen.classList.toggle("hidden");
    iconClose.classList.toggle("hidden");
  });
</script>
