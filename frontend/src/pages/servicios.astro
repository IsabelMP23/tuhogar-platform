---
import BaseLayout from "../layouts/baseLayout.astro";
import Image from "astro/components/Image.astro";
import ServicesCards from "../components/ServicesCards.astro";
---

<BaseLayout title="Servicios">
  <section aria-labelledby="servicio-hero-image">
    <Image
      src={"/images/servicios.webp"}
      alt="Compra de propiedades"
      width={1200}
      height={400}
      format="webp"
      loading="eager"
      class="w-full h-auto md:max-h-92 object-cover lg:object-top bg-gray-400"
    />
  </section>
  <section class="my-20 px-6 flex flex-col items-center max-w-7xl mx-auto">
    <h1 class="text-2xl font-bold mb-2">Nuestros Servicios</h1>
    <h3 class="text-3xl font-semibold mb-10">Asesor√≠a Inmobiliaria Integral</h3>
    <ServicesCards />
    <a href="/contactanos" class="btn mt-10 px-6 py-3">Contactanos</a>
  </section>
</BaseLayout>
