    <Image
        src={"/assets/callcenter.jpg"}
        alt="Compra de propiedades"
        width={1200}
        height={400}
        format="avif"
        loading="eager"
        class="w-full h-auto md:max-h-92 object-cover  bg-gray-400"
      />
    </section>
  <section class="py-20 px-3 sm:px-6 lg:px-8">
    <h1 class="text-lg font-bold mb-2 text-center">Nuestros Servicios</h1>
    <h3 class="text-3xl font-semibold mb-4 text-center">Asesor√≠a Inmobiliaria Integral</h3>
