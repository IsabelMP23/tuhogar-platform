---
import CardCarousel from "../components/CardCarousel.astro";
import StarRating from "../components/StartRating.astro";
---

<section class="max-w-7xl  mx-auto py-20" aria-labelledby="sobre-nosotros-encabezado">
  <div
    class="w-full px-3 sm:px-6 lg:px-8 overflow-hidden"
  >
    <h2
      id="sobre-nosotros-encabezado"
      class="text-lg font-bold mb-2 text-white"
    >
      Reseñas favorables
    </h2>
    <h3 class="text-3xl font-semibold mb-2">Comentarios</h3>
    <CardCarousel>
      {
        [1, 2, 3].map((_, i) => (
          <div class="bg-white rounded-lg shadow-md min-w-[20rem] flex flex-col  h-60 p-6">
            <div class="mb-4">
              <h4 class="text-lg font-semibold mb-2">
                Excelente servicio y atención
              </h4>
              <p class="text-sm line-clamp-4">
                La experiencia con TuHogar fue increíble. Me ayudaron a
                encontrar la casa perfecta y el proceso fue muy sencillo.
                ¡Recomendados al 100%!
              </p>
            </div>
            <StarRating rating={5} />
            <div class="flex items-center mb-4">
              <img
                class="w-10 h-10 me-4 rounded-full bg-gray-400"
                src="/docs/images/people/profile-picture-5.jpg"
                alt=""
              />
              <div class="font-medium ">
                <p>
                  Jese Leos{" "}
                  <time
                    datetime="2014-08-16 19:00"
                    class="block text-sm text-gray-500 dark:text-gray-400"
                  >
                    August 2014
                  </time>
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </CardCarousel>
  </div>
</section>
