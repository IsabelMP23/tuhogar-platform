---
import CardCarousel from "./CardCarousel.astro";
---

<section class="max-w-7xl mx-auto py-20" aria-labelledby="sobre-nosotros-encabezado">
  <div
    class="w-full px-3 sm:px-6 lg:px-8 overflow-hidden flex flex-col justify-center items-start"
  >
    <h2
      id="sobre-nosotros-encabezado"
      class="text-lg font-bold mb-2 text-white"
    >
      Nuestras propiedades
    </h2>
    <h3 class="text-3xl font-semibold mb-2">Las mejores propiedades</h3>
    <CardCarousel>
      {
        [1, 2, 3, 4, 5].map((_, i) => (
          <div class="bg-white rounded-lg shadow-md min-w-[18rem] flex flex-col items-center h-80 ">
            <img
              src={`/assets/property${i + 1}.jpg`}
              alt={`Propiedad ${i + 1}`}
              class="w-full h-48 object-cover rounded-md bg-gray-400"
            />
            <article class="px-4 w-full">
              <h3 class="text-lg font-bold mt-3">$ {i + 1}00,000,000 MXN</h3>
              <h4 class="text-md font-medium">Propiedad {i + 1}</h4>
              <p class="text-gray-600 text-sm line-clamp-2">
                Descripci√≥n breve de la propiedad {i + 1}.
              </p>
            </article>
          </div>
        ))
      }
    </CardCarousel>
    <button class="btn mt-4 px-6 py-3 self-center"
      >Ver todas las propiedades</button
    >
  </div>
</section>
