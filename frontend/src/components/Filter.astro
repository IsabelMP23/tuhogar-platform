<section
  class="max-w-72 hidden lg:block "
>
  <article class=" bg-white rounded-lg shadow-2xl border border-gray-300 p-4">
    <h2 class="text-xl font-semibold mb-4">Filtros</h2>

    <div class="mb-6">
      <h3 class="font-medium text-gray-700 mb-2">Tipo</h3>
      <select class="w-full border rounded-lg px-3 py-2">
        <option value="">Todos</option>
        <option>Casa</option>
        <option>Departamento</option>
        <option>Terreno</option>
        <option>Local</option>
      </select>
    </div>

    <div class="mb-6">
      <h3 class="font-medium text-gray-700 mb-2">Precio</h3>
      <div class="flex gap-2">
        <input
          type="number"
          placeholder="Mín"
          class="w-full border rounded-lg px-3 py-2"
        />
        <input
          type="number"
          placeholder="Máx"
          class="w-full border rounded-lg px-3 py-2"
        />
      </div>
    </div>

    <div class="mb-6">
      <h3 class="font-medium text-gray-700 mb-2">Ubicación</h3>
      <input
        type="text"
        placeholder="Ej. Guadalajara"
        class="w-full border rounded-lg px-3 py-2"
      />
    </div>

    <div class="flex flex-col gap-2">
      <button class="bg-gray-900 text-white py-2 rounded-lg hover:bg-gray-800">
        Aplicar filtros
      </button>
      <button class="bg-gray-200 py-2 rounded-lg hover:bg-gray-300">
        Limpiar
      </button>
    </div>
  </article>
</section>
