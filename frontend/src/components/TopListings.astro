---
import PropiedadesCarousel from "./PropiedadesCarousel"
---

<section
  class="max-w-7xl mx-auto my-32 md:my-45"
  aria-labelledby="sobre-nosotros-encabezado"
>
  <div class="w-full px-6 overflow-hidden">
    <h2
      id="sobre-nosotros-encabezado"
      class="text-2xl font-bold mb-2 text-white"
    >
      Nuestras propiedades
    </h2>
    <h3 class="text-3xl font-semibold mb-6">Las mejores propiedades</h3>
    <PropiedadesCarousel client:visible/>
    <button
      class="btn mt-6 px-6 py-3 mx-auto block"
      onclick="location.href='/propiedades'">Ver todas las propiedades</button
    >
  </div>
</section>
